[Unit]
Description=Celery Service
After=network.target

[Service]
User=root
Group=root
Environment="C_FORCE_ROOT=true"
WorkingDirectory=/opt/proxy_experimental
ExecStart=/usr/bin/celery worker -A my_proxy.celery -E --loglevel=info --logfile=/var/log/celery/celery.log
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
